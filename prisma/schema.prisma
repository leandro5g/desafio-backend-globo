generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id           String   @id @default(uuid())
  title        String
  description  String
  url          String
  thumbnailUrl String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  feedbacks Feedback[]

  @@map("videos")
}

model Feedback {
  id        String   @id @default(uuid())
  videoId   String
  comment   String
  rating    Int
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  video Video @relation(fields: [videoId], references: [id])

  @@map("feedbacks")
}
